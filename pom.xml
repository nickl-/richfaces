		<repository>
			<id>central-maven-org</id>
			<name>Maven Central </name>
			<url>http://central.maven.org/maven2/</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
